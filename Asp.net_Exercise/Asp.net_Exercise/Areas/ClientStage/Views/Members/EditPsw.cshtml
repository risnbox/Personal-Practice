@using Asp.net_Exercise.Models
@model EditPsw
@{
    ViewBag.Title = "修改密碼";
    var date = DateTime.Now.ToString("MMdd");
    var e = ViewBag.EditMsg;
}
<link href="~/Content/MemberList.css?@date" rel="stylesheet" type="text/css" />

<script>
    $(() => {
        ("@e") ? $("#alert").text("@e").show().delay(3000).fadeOut() : null;
    })
</script>

<div id="alert"></div>
<div class="container">
    <div class="row" style="padding-top:30px">
        <div class="U list-group list-group-horizontal">
            <a href="@Url.Action("OrderVIew","members")" class="L list-group-item"><span>我的訂單</span></a>
            <a href="KeepView" class="L list-group-item"><span>我的收藏</span></a>
            <a class="L list-group-item" href="@Url.Action("Location","store")">設定取貨門市</a>
            <a class="L list-group-item" href="@Url.Action("membercenter","members")">修改會員資料</a>
            <a class="L list-group-item active">修改密碼</a>
        </div>
    </div>
</div>
<div id="alert"></div>

<form class="container-fluid" method="post" action="/members/editpsw">
    <div class="row col-md-offset-4">
        <div class="form-group">
            <label class="form-label">舊密碼</label>
            <input name="oldpsw" id="old" type="password" class="form-control" />
            @Html.ValidationMessageFor(m => m.oldpsw, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="form-label">新密碼</label>
            <input name="newpsw" id="new" type="password" class="form-control" />
            @Html.ValidationMessageFor(m => m.newpsw, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="form-label">確認密碼</label>
            <input name="check" id="check" type="password" class="form-control" />
            @Html.ValidationMessageFor(m => m.check, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" id="submit" class="btn btn-success col-md-1" value="送出" />
        </div>
    </div>
</form>
