@{
    var date = DateTime.Now.ToString("MMdd");
    ViewBag.Title = "選擇門市";
}
<link href="~/Content/MemberList.css?@date" rel="stylesheet" type="text/css" />
<script src="~/Scripts/Store.js?@date" defer></script>

<script>
    let err = "@TempData["CartError"]";
</script>

<div class="container">
    <div class="row" style="padding-top:30px">
        <div class="U list-group list-group-horizontal">
            <a href="@Url.Action("OrderVIew", "members")" class="L list-group-item"><span>我的訂單</span></a>
            <a href="@Url.Action("KeepView", "members")" class="L list-group-item"><span>我的收藏</span></a>
            <a class="L list-group-item active">設定取貨門市</a>
            <a class="L list-group-item" href="@Url.Action("MemberCenter", "members")">修改會員資料</a>
            <a class="L list-group-item" href="@Url.Action("EditPsw","members")">修改密碼</a>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div id=alert></div>
    <hr />
    <h4 class="col-md-offset-5">設定取貨地點</h4>
    <div id='alert'></div>
    <div class="form-inline">
        <div class="form-group col-md-offset-3 col-md-9">
            <h4>查詢及修改已選擇的門市</h4>
            <label class="control-label">顯示已選擇的門市</label>
            <input type="button" id="ViewStore" value="顯示門市" class="btn btn-default" />
        </div>


        <div class="form-group col-md-offset-3 col-md-9">
            <h4>新增門市</h4>
            <label class="control-label">請先選擇縣市</label>
            @Html.DropDownList("city", ViewBag.CitySelect as SelectList, new { @class = "form-control", @id = "CitySelect" })
            <select class="form-control" id="TownSelect"></select>
            <input type="button" id="Openbtn" value="查詢711" class="btn btn-default" />
        </div>

        <table class="table" id="Ltable">
            <tr>
                <th>分店名</th>
                <th>地址</th>
                <th>店編號</th>
                <th>市內電話</th>
                <th colspan="2"></th>
            </tr>
        </table>
    </div>

}

