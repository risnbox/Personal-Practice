
@{
    var date = DateTime.Now.ToString("MMdd");
}
<title>會員管理</title>
<link href="~/Content/Backstage/BMember.css?@date" rel="stylesheet">
<script defer src="~/Scripts/Backstage/BMember.js?@date">
</script>

<script>
    var data = JSON.parse('@Html.Raw(ViewBag.data)');
</script>

<div class="father">
    <div class="top">
        <div class="top-bgc">
            <form class="form-horizontal row" id="form1">

                <div class="form-group col-3 row">
                    <label class="col-6 top-h1">性別</label>
                    <select id="gender" class="col-6 form-control">
                        <option selected>不限</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="form-group col-3 row">
                    <label class="col-6 top-h1">綁定Google</label>
                    <select id="google" class="col-6 form-control">
                        <option selected>不限</option>
                        <option>是</option>
                        <option>否</option>
                    </select>
                </div>
                <div class="form-group col-3 row">
                    <label class="col-6 top-h1">綁定FB</label>
                    <select id="FB" class="col-6 form-control">
                        <option selected>不限</option>
                        <option>是</option>
                        <option>否</option>
                    </select>
                </div>
                <div class="form-group col-3 row">
                    <label class="col-6 top-h1">帳號狀態</label>
                    <select id="status" class="col-6 form-control">
                        <option selected>不限</option>
                        <option>啟用</option>
                        <option>未啟用</option>
                        <option>停權</option>
                    </select>
                </div>
                <div class="form-group row col-12">
                    <input type="button" id="remove" class="btn btn-danger offset-4 col-1" value="清除" />
                    <input type="button" id="submit" class="btn btn-success offset-2 col-1" value="搜尋" />
                </div>
            </form>
        </div>
    </div>
    <hr class="mid-hr" />
    <div class="container-fluid bottom">
        <table style="margin:0" class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>會員編號</th>
                    <th id='td-lg'>姓名</th>
                    <th id='td-lg'>信箱</th>
                    <th id='td-lg'>手機</th>
                    <th>性別</th>
                    <th id='font'>綁定Google</th>
                    <th id='font'>綁定FB</th>
                    <th id='font'>帳號狀態</th>
                    <th id='font'>訂單資料</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div id="alert"></div>


