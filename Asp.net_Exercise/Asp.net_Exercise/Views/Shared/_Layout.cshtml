<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand"><img src="~/Img/logo-2011.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <!--檢查Session是否為空,若是則顯示註冊及登入選項,否則顯示會員中心及登出選項-->
                    @if (Session["Member"]==null)
                    {
                        <!--Class為Bootsrap內件的圖示-->
                        <li><a href="@Url.Action("SignUp","Home")"><span class="glyphicon glyphicon-user">註冊</span></a></li>
                        <li><a href="@Url.Action("SignIn","Home")"><span class="glyphicon glyphicon-log-in">登入</span></a></li>
                    }

                    else
                    {
                        <!--下拉式選單在Goolge書籤有紀錄-->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @Session["MemberName"]您好
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("MemberCenter","Home")"><span class="glyphicon glyphicon-user">會員中心</span></a></li>
                                <li><a href="@Url.Action("SignOut","Home")"><span class="glyphicon glyphicon-log-out">登出</span></a></li>
                            </ul>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


</body>
</html>