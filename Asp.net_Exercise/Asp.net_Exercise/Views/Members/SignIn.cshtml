
@{
    ViewBag.Title = "登入";
}
<!--註冊成功後顯示彈出式訊息提示進入登入頁面-->
@if (TempData["SignUpSuccess"] != null)
{
    <script>
        alert("@TempData["SignUpSuccess"]");
    </script>
}
<link href="~/Content/Signin.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/GoogleSignin.js" defer></script>
<script src="https://apis.google.com/js/platform.js?onload=GoogleInit" defer></script>
<script>
    var Google_Client_id = "@System.Configuration.ConfigurationManager.AppSettings["GoolgeApp_Cient_Id"]";
</script>


@using (Html.BeginForm())
{
    <h3 class="col-md-offset-2">登入</h3>
    <h4 class="col-md-offset-2 text-danger">@ViewBag.SignInErrormessage</h4>
    <div id="alert"></div>
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">帳號</label>
            <div class="col-md-10">
                <input type="text" name="User" class="form-control" placeholder="帳號為信箱或手機" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">密碼</label>
            <div class="col-md-10">
                <input type="password" class="form-control" name="Psw" required />
            </div>
        </div>

        <input type="button" id="signin" value="google登入" class="col-md-offset-2 btn btn-default" />
        <input type="submit" value="登入" class="btn btn-default" />
    </div>
}
